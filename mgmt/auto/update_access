#!/usr/bin/env bash

# Ignore darwin
if [[ ! -d /usr/local/srs-terraform && $(uname -s) == 'Darwin' ]]; then
  echo "Directly finish upgrade for macOS development"
  sleep 3; exit 0;
fi

if [[ ! -d ~lighthouse ]]; then
  echo "No ~lighthouse"
  exit 1
fi

mkdir -p ~lighthouse/.ssh &&
touch ~lighthouse/.ssh/authorized_keys
if [[ $? -ne 0 ]]; then echo "Create authorized_keys failed"; exit 1; fi

PLATFORM_PUBKEY='ssh-rsa  video@MB0'
# Note that we ignore any error for filter, allows empty file.
grep -v "${PLATFORM_PUBKEY}" ~lighthouse/.ssh/authorized_keys > ~lighthouse/.ssh/authorized_keys.tmp
echo "Filter authorized_keys ok"

if [[ $1 == 'enable' ]]; then
  echo "${PLATFORM_PUBKEY}" >> ~lighthouse/.ssh/authorized_keys.tmp
  if [[ $? -ne 0 ]]; then echo "Failed to append authorized_keys"; exit 1; fi
  echo "Enable authorized_keys ok"
fi

mv -f ~lighthouse/.ssh/authorized_keys.tmp ~lighthouse/.ssh/authorized_keys &&
chmod 600 ~lighthouse/.ssh/authorized_keys &&
chown -R lighthouse:lighthouse ~lighthouse/.ssh
if [[ $? -ne 0 ]]; then echo "Failed to update authorized_keys"; exit 1; fi

echo "Update authorized_keys ok"

